<h1>Portfolios</h1>

<!-- Link to create new Portfolio item -->
<%= link_to "Create New Item", new_portfolio_path %>

<p id="notice"><%= notice %></p>

<% @portfolio_items.each do |portfolio_item| %>
  <p><%= portfolio_item.title %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?%></p>
  <p><%=link_to "Edit", edit_portfolio_path(portfolio_item.id) %></p>
  <p><%=link_to "Delete Portfolio Item", portfolio_path(portfolio_item.id), method: :delete, data: { confirm: 'Are you sure, bro?' } %></p>
<% end %>
